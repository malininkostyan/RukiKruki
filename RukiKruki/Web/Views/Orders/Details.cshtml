@model DAL.ViewModel.OrderViewModel

@{
    ViewBag.Title = "Просмотр заказа";
}

<h2>Просмотр заказа</h2>
@using (Html.BeginForm("", "Orders", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                ФИО Клиента
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ClientFIO)
            </dd>

            <dt>
                Сумма
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TotalSum)
            </dd>

            <dt>
                Статус
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StatusOrder)
            </dd>

            <dt>
                Дата создания
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateCreate)
            </dd>

            <dt>
                Дата исполнения
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateImplement)
            </dd>

        </dl>

        <table class="table">
            <tr>
                <th>
                    TO
                </th>
                <th>
                    Количество
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.OrderTOs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TOName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                </tr>
            }

        </table>
    </div>
}
<p>
    @Html.ActionLink("Вернуться к списку заказов", "Index")
</p>